{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  <div class="login_page_wrapper">
    <div class="md-card" id="login_card">

      <div class="md-card-content large-padding uk-position-relative">
        <button type="button" class="uk-position-top-right uk-close uk-margin-right uk-margin-top back_to_login"></button>
        <h2 class="heading_b uk-text-success">Congrats</h2>
        <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
      </div>
    </div>
    {% if targetUrl %}
      <div class="uk-margin-top uk-text-center">
        <a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a>
      </div>
    {% else %}
      <div class="uk-margin-top uk-text-center">
        <a href="{{ url('fos_user_security_login') }}">{{ 'login.back'|trans }}</a>
      </div>
    {% endif %}

  </div>
{% endblock fos_user_content %}
