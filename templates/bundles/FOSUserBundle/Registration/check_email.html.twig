{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
  <div class="login_page_wrapper">
    <div class="md-card" id="login_card">

      <div class="md-card-content large-padding uk-position-relative">
        <a href="{{ url('fos_user_security_login') }}" role="button" class="uk-position-top-right uk-close uk-margin-right uk-margin-top back_to_login"></a>
        <h2 class="heading_b uk-text-success">{{ 'registration.check_email'|trans }}</h2>
        <p>{% trans with {
            '%email%' : user.email
          }
          from "FOSUserBundle" %}registration.check_email{% endtrans %}</p>
      </div>
    </div>
    <div class="uk-margin-top uk-text-center">
      <a href="{{ url('fos_user_security_login') }}">{% trans from "FOSUserBundle" %}registration.back{% endtrans %}</a>
    </div>

  </div>
{% endblock fos_user_content %}
