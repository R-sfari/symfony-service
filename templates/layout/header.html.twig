<!-- main header -->
<header id="header_main">
  <div class="header_main_content">
    <nav class="uk-navbar">
      <!-- main sidebar switch -->
      <a href="#" id="sidebar_main_toggle" class="sSwitch sSwitch_left">
        <span class="sSwitchIcon"></span>
      </a>
      <div class="uk-navbar-flip">
        <ul class="uk-navbar-nav user_actions">
          <li><a href="#" id="main_search_btn" class="user_action_icon"><i class="material-icons md-24 md-light">&#xE8B6;</i></a></li>
          <!-- # user is logged in -->
          {% if app.user %}
            <li data-uk-dropdown="{mode:'click',pos:'bottom-right'}">
              <a href="#" class="user_action_icon">
                <i class="material-icons md-24 md-light">&#xE7F4;</i>
                <span class="uk-badge">16</span></a>
              <div class="uk-dropdown uk-dropdown-xlarge">
                <div class="md-card-content">
                  <ul class="uk-tab uk-tab-grid" data-uk-tab="{connect:'#header_alerts',animation:'slide-horizontal'}">
                    <li class="uk-width-1-2 uk-active">
                      <a href="#" class="js-uk-prevent uk-text-small">Messages (12)</a>
                    </li>
                    <li class="uk-width-1-2">
                      <a href="#" class="js-uk-prevent uk-text-small">Alerts (4)</a>
                    </li>
                  </ul>
                  <ul id="header_alerts" class="uk-switcher uk-margin">
                    <li>
                      <ul class="md-list md-list-addon">
                        <li>
                          <div class="md-list-addon-element">
                            <span class="md-user-letters md-bg-cyan">wz</span>
                          </div>
                          <div class="md-list-content">
                            <span class="md-list-heading">
                              <a href="pages_mailbox.html">Voluptates consequatur distinctio.</a>
                            </span>
                            <span class="uk-text-small uk-text-muted">Esse rerum sed quae at amet aut.</span>
                          </div>
                        </li>

                      </ul>
                      <div class="uk-text-center uk-margin-top uk-margin-small-bottom">
                        <a href="page_mailbox.html" class="md-btn md-btn-flat md-btn-flat-primary js-uk-prevent">Show All</a>
                      </div>
                    </li>
                    <li>
                      <ul class="md-list md-list-addon">
                        <li>
                          <div class="md-list-addon-element">
                            <i class="md-list-addon-icon material-icons uk-text-warning">&#xE8B2;</i>
                          </div>
                          <div class="md-list-content">
                            <span class="md-list-heading">Laborum voluptas.</span>
                            <span class="uk-text-small uk-text-muted uk-text-truncate">Vel maiores voluptatem dolore sint aperiam error unde nobis.</span>
                          </div>
                        </li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </div>
            </li>
            <li data-uk-dropdown="{mode:'click',pos:'bottom-right'}">
              <a href="#" class="user_action_icon">
                <i class="material-icons md-24 md-light">&#xE853;</i>
              </a>
              <div class="uk-dropdown uk-dropdown-small">
                <ul class="uk-nav js-uk-prevent">
                  <li>
                    <a href="{{ path('fos_user_profile_show') }}">{{ 'menu.profile'|trans }}</a>
                  </li>
                  <li>
                    <a href="{{ path('fos_user_change_password') }}">{{ 'menu.settings'|trans }}</a>
                  </li>
                  <li>
                    <a href="{{ path('fos_user_security_logout') }}">{{ 'menu.logout'|trans }}</a>
                  </li>
                </ul>
              </div>
            </li>
            <!-- # user is not logged in -->
          {% else %}
            <li>
              <a href="{{ path('fos_user_security_login') }}" class="user_action_icon">
                <i class="material-icons md-24 md-light">&#xE898;</i>
              </a>
            </li>
          {% endif %}

        </ul>
      </div>
    </nav>
  </div>
  <div class="header_main_search_form">
    <i class="md-icon header_main_search_close material-icons">&#xE5CD;</i>
    <form class="uk-form uk-autocomplete" data-uk-autocomplete="{source:'data/search_data.json'}">
      <input type="text" class="header_main_search_input"/>
      <button class="header_main_search_btn uk-button-link">
        <i class="md-icon material-icons">&#xE8B6;</i>
      </button>
  </form>
</div>
</header>
<!-- main header end -->
