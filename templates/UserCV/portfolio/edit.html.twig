<button type="button" class="uk-modal-close uk-close"></button>
<div class="uk-modal-header">
  <h3 class="uk-modal-title">{{ 'user_cv.portfolio.edit'|trans }}</h3>
</div>
<div class="uk-animation-fade">
  {{ form_start(form ,{ 'action': path('portfolio_edit', {'id': portfolio.id }) }) }}
  <div class="uk-form-row">
    <label class="uk-form-label">{{ form_label(form.imageFile) }}</label>
    <div id="dropify_file" style="display:none;">{{ vich_uploader_asset(portfolio, 'imageFile') }}</div>
    {{ form_widget(form.imageFile)}}
    <div class="parsley-errors-list filled uk-text-danger">
      {{ form_errors(form.imageFile) }}
    </div>
  </div>
  <div class="uk-grid uk-margin-medium-top" data-uk-grid-margin="data-uk-grid-margin">
    <div class="uk-width-large-1-2">
      <div class="uk-form-row">
        <label class="uk-form-label">{{ form_label(form.projectName) }}</label>
        {{ form_widget(form.projectName)}}
        <div class="parsley-errors-list filled uk-text-danger">
          {{ form_errors(form.projectName) }}
        </div>
      </div>
    </div>
    <div class="uk-width-large-1-2">
      <div class="uk-form-row">
        <label class="uk-form-label">{{ form_label(form.projectURL) }}</label>
        {{ form_widget(form.projectURL)}}
        <div class="parsley-errors-list filled uk-text-danger">
          {{ form_errors(form.projectURL) }}
        </div>
      </div>
    </div>
  </div>
  <div class="uk-form-row uk-margin-medium-top">
    <label class="uk-form-label">{{ form_label(form.description) }}</label>
    {{ form_widget(form.description)}}
    <div class="parsley-errors-list filled uk-text-danger">
      {{ form_errors(form.description) }}
    </div>
  </div>
  <h3 class="heading_a  uk-margin-medium-top">{{ 'portfolio.field.period'|trans }}</h3>
  <div class="uk-grid uk-margin-medium-bottom" data-uk-grid-margin="data-uk-grid-margin">
    <div class="uk-width-large-1-2">
      <div class="uk-form-row">
        {{ form_widget(form.fromYear)}}
        <div class="parsley-errors-list filled uk-text-danger">
          {{ form_errors(form.fromYear) }}
        </div>
      </div>

      <div class="uk-form-row">
        {{ form_widget(form.fromMonth)}}
        <div class="parsley-errors-list filled uk-text-danger">
          {{ form_errors(form.fromMonth) }}
        </div>
      </div>
    </div>
    <div id="end_period" {% if portfolio.projectOnGoing %}style="display: none;"{% endif %} class="uk-width-large-1-2">
      <div class="uk-form-row">
        {{ form_widget(form.toYear)}}
        <div class="parsley-errors-list filled uk-text-danger">
          {{ form_errors(form.toYear) }}
        </div>
      </div>
      <div class="uk-form-row">
        {{ form_widget(form.toMonth)}}
        <div class="parsley-errors-list filled uk-text-danger">
          {{ form_errors(form.toMonth) }}
        </div>
      </div>
    </div>
  </div>
  <div class="uk-form-row">
    {{ form_widget(form.projectOnGoing, { 'attr': {'data-switchery-color': '#1976d2' , "data-switchery-size" : "medium" ,  "data-switchery" : ""} }) }}
    <label for="enabled" class="inline-label">{{ form_label(form.projectOnGoing) }}</label>
  </div>
  <div class="uk-modal-footer uk-text-right">
    <button type="button" class="md-btn md-btn-flat uk-modal-close">Close</button>
    {{ form_widget(form.submit) }}
  </div>
  {{ form_widget(form) }}
  {{ form_end(form) }}
</div>
