{% extends 'base.html.twig' %}

{% block body %}
    <h1>Interest</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ interest.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ interest.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ interest.image }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if interest.created %}{{ interest.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if interest.updated %}{{ interest.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('interests_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('interests_edit', { 'id': interest.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
